package-as: Altoholic

license-output: LICENSE.txt

enable-nolib-creation: yes

required-dependencies:
	- datastore
	- datastore_achievements
	- datastore_agenda
	- datastore_auctions
	- datastore_characters
	- datastore_containers
	- datastore_crafts
	- datastore_currencies
	- datastore_inventory
	- datastore_mails
	- datastore_pets
	- datastore_quests
	- datastore_reputations
	- datastore_spells
	- datastore_stats
	- datastore_talents

ignore:
 - .pkgmeta
 - .docmeta

externals:
 libs/AceConfig-3.0:
  url: svn://svn.wowace.com/wow/ace3/mainline/trunk/AceConfig-3.0
 libs/AceDBOptions-3.0:
  url: svn://svn.wowace.com/wow/ace3/mainline/trunk/AceDBOptions-3.0
 libs/AceGUI-3.0:
  url: svn://svn.wowace.com/wow/ace3/mainline/trunk/AceGUI-3.0
 libs/LibBabble-Faction-3.0:
  url: svn://svn.wowace.com/wow/libbabble-faction-3-0/mainline/trunk
 libs/LibBabble-Boss-3.0:
  url: svn://svn.wowace.com/wow/libbabble-boss-3-0/mainline/trunk
 libs/LibBabble-Zone-3.0:
  url: svn://svn.wowace.com/wow/libbabble-zone-3-0/mainline/trunk
 libs/LibBabble-Inventory-3.0:
  url: svn://svn.wowace.com/wow/libbabble-inventory-3-0/mainline/trunk
 libs/LibDataBroker-1.1: 
  url: git://github.com/tekkub/libdatabroker-1-1.git
  tag: latest

move-folders:
    Altoholic/Modules/Altoholic_Achievements: Altoholic_Achievements
    Altoholic/Modules/Altoholic_Agenda: Altoholic_Agenda
    Altoholic/Modules/Altoholic_Characters: Altoholic_Characters
    Altoholic/Modules/Altoholic_Guild: Altoholic_Guild
    Altoholic/Modules/Altoholic_Search: Altoholic_Search